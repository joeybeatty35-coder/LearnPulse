<script>
(function(){
  const EMAIL_TO = "learnpulse.app@gmail.com";
  const SITE_URL = (location && location.origin) ? location.origin : "https://learn-pulse-git-main-learnpulse1.vercel.app";

  const typeEl = document.getElementById("type");
  const nameEl = document.getElementById("name");
  const catEl = document.getElementById("category");
  const emailEl = document.getElementById("email");
  const msgEl = document.getElementById("message");

  const btnSend = document.getElementById("btnSend");
  const btnClear = document.getElementById("btnClear");
  const btnTop = document.getElementById("btnTop");
  const btnCopy = document.getElementById("btnCopy");
  const toast = document.getElementById("toast");

  function showToast(text){
    toast.textContent = text || "Done.";
    toast.style.display = "inline-flex";
    clearTimeout(window.__lpToast);
    window.__lpToast = setTimeout(()=> toast.style.display="none", 1600);
  }

  btnTop.addEventListener("click", () => window.scrollTo({ top: 0, behavior: "smooth" }));

  btnClear.addEventListener("click", () => {
    typeEl.value = "Topic Request";
    nameEl.value = "";
    catEl.value = "Learn";
    emailEl.value = "";
    msgEl.value = "";
    showToast("Cleared.");
  });

  btnSend.addEventListener("click", () => {
    const type = typeEl.value.trim();
    const name = nameEl.value.trim();
    const category = catEl.value.trim();
    const reply = emailEl.value.trim();
    const msg = msgEl.value.trim();

    if(!msg){
      alert("Please write a message first.");
      return;
    }

    const subject = `LearnPulse ‚Äî ${type} (${category})`;
    const lines = [
      `Type: ${type}`,
      `Category: ${category}`,
      name ? `Name: ${name}` : `Name: (not provided)`,
      reply ? `Reply-to: ${reply}` : `Reply-to: (not provided)`,
      `Source page: ${SITE_URL}/support.html`,
      "",
      "Message:",
      msg,
      "",
      "Note: Informational only. Results vary."
    ];

    const body = lines.join("\n");
    const url = `mailto:${encodeURIComponent(EMAIL_TO)}?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
    window.location.href = url;
    showToast("Email draft created.");
  });

  btnCopy.addEventListener("click", async () => {
    const text = SITE_URL;
    try{
      await navigator.clipboard.writeText(text);
      showToast("Site link copied.");
    }catch(e){
      // fallback
      const ta = document.createElement("textarea");
      ta.value = text;
      document.body.appendChild(ta);
      ta.select();
      document.execCommand("copy");
      document.body.removeChild(ta);
      showToast("Site link copied.");
    }
  });

  // Donation placeholder behavior
  const donateLink = document.getElementById("donateLink");
  donateLink.addEventListener("click", (e) => {
    e.preventDefault();
    alert(
      "Donation link is not connected yet.\n\n" +
      "Next step: create a donation link (PayPal / Ko-fi / Buy Me a Coffee) and replace the href on this page.\n\n" +
      "Informational only. Results vary."
    );
  });
})();
</script>

